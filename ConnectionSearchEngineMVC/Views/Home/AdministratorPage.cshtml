<div class="container">
    <br />
    <h3>Zaloguj się do panelu Administratora</h3>
    <br />
    <form asp-action="AdministratorPanel">
        <div class="form-group">
            <label for="login">Login:</label>
            <input type="text" class="form-control" id="login" placeholder="wprowadź Login" name="Login">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" placeholder="wprowadź hasło" name="Password">
        </div>
        <button type="submit" class="btn btn-primary">Loguj</button>
    </form>
</div>
